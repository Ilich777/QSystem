{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": ["@typescript-eslint", "react"],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended"
    ],
    "rules": {
        "no-console": ["warn"],
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": "off",
		"quotes": [
			"error",
			"double"
		],
		"semi": [
			"error",
			"always"
		],
		"semi-style": [
			"error", 
			"last"
		],
		"semi-spacing": [
			"error", {
				"before": false,
				"after": true
			}
		],
		"no-unused-vars": ["warn"],
		"@typescript-eslint/no-var-requires": "off",
		"prefer-const": ["warn"]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
  
